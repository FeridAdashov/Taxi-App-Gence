<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="texel.texel_pocketmaps.activities.HelperActivities.ClosePassengerServiceDialogActivity"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_margin="5dp">

    <TextView
        android:id="@+id/closeMessage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="@color/white"
        android:textSize="18sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonCloseService"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Sifarişi Ləğv Et"
            android:layout_weight="3"
            android:background="@drawable/shapesearchbutton"/>

        <Button
            android:id="@+id/buttonCloseDialog"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Gözlə"
            android:layout_weight="2"
            android:background="@drawable/shapesearchbutton"
            android:textColor="@color/colorAccent"/>

    </LinearLayout>
</LinearLayout>